{
	"name": "run-if-env",
	"version": "1.0.1",
	"description": "Conditionally run package.json scripts based on environment variables' values.",
	"main": "dist/index.js",
	"bin": "bin/index.js",
	"scripts": {
		"preinstall": "npx only-allow yarn",
		"dev": "rollup -c -w",
		"build": "rollup -c --environment BUILD:production",
		"test": "TS_NODE_PROJECT=tsconfig.tests.json mocha -r ts-node/register ./tests/**/*.ts",
		"lint": "xo --fix",
		"pub": "yarn build && yarn version --patch && yarn npm publish"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/jarm0785/runif.git"
	},
	"keywords": [
		"env",
		"environment",
		"cli",
		"command",
		"cmd",
		"execute",
		"run",
		"file",
		"variables",
		"config"
	],
	"files": [
		"dist",
		"bin",
		"LICENCE",
		"README.md"
	],
	"engines": {
		"node": ">=14.16"
	},
	"author": "jarm0785",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/jarm0785/runif/issues"
	},
	"homepage": "https://github.com/jarm0785/runif#readme",
	"dependencies": {
		"env-cmd": "^10.1.0",
		"minimist": "^1.2.6"
	},
	"devDependencies": {
		"@rollup/plugin-commonjs": "^22.0.2",
		"@rollup/plugin-json": "^4.1.0",
		"@rollup/plugin-node-resolve": "^13.3.0",
		"@rollup/plugin-typescript": "^8.4.0",
		"@types/chai": "^4.3.3",
		"@types/execa": "^2.0.0",
		"@types/minimist": "^1.2.2",
		"@types/mocha": "^9.1.1",
		"@types/node": "^18.7.13",
		"@types/sinon": "^10.0.13",
		"@typescript-eslint/eslint-plugin": "^5.35.1",
		"@typescript-eslint/parser": "^5.35.1",
		"chai": "^4.3.6",
		"eslint": "^8.23.0",
		"eslint-config-xo": "^0.42.0",
		"eslint-config-xo-typescript": "^0.53.0",
		"eslint-define-config": "^1.6.0",
		"eslint-plugin-import": "^2.26.0",
		"eslint-plugin-node": "^11.1.0",
		"execa": "^6.1.0",
		"mocha": "^10.0.0",
		"rollup": "^2.78.1",
		"rollup-plugin-delete": "^2.0.0",
		"rollup-plugin-terser": "^7.0.2",
		"sinon": "^14.0.0",
		"ts-node": "^10.9.1",
		"tslib": "^2.4.0",
		"typescript": "^4.8.2",
		"xo": "^0.52.2"
	},
	"packageManager": "yarn@3.2.3",
	"eslintConfig": {
		"extends": [
			"xo",
			"xo-typescript"
		],
		"parser": "@typescript-eslint/parser",
		"parserOptions": {
			"project": "tsconfig.eslint.json"
		}
	}
}
